{
  "name": "hypothesis-arena",
  "version": "2.0.0",
  "description": "AI-powered investment analysis with 8 AI agents - now with real WEEX futures trading",
  "author": "Hypothesis Arena Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drix10/hypothesis-arena.git"
  },
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "preinstall": "npm install --prefix backend",
    "dev": "concurrently -n backend,frontend -c blue,green \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev -w @hypothesis-arena/frontend",
    "dev:backend": "npm run dev -w @hypothesis-arena/backend",
    "build": "npm --prefix backend run build",
    "build:backend": "npm --prefix backend run build",
    "build:frontend": "npm --prefix frontend run build",
    "start": "node backend/start.js",
    "start:backend": "node backend/start.js",
    "start:frontend": "npm --prefix frontend run preview",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "db:migrate": "npm run migrate -w @hypothesis-arena/backend",
    "weex-test": "tsx weex-api-test.ts",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "tsc": "npm run typecheck --workspaces --if-present",
    "sync:shared": "node scripts/sync-shared.js",
    "check:shared": "node scripts/check-shared-sync.js",
    "clean": "node -e \"const fs=require('fs');const rm=p=>{try{fs.rmSync(p,{recursive:true,force:true})}catch(e){console.error('Failed to remove '+p+':',e.message)}};['node_modules','frontend/node_modules','backend/node_modules','frontend/dist','backend/dist'].forEach(rm)\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@types/dompurify": "^3.0.5",
    "dompurify": "^3.3.0",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.556.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "vite": "^6.2.0"
  }
}